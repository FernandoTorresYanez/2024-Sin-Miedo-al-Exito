    <RichText.TestBtn>
        <FormDialog Icon="Network/32x32/link.png" Header="Insert a html code"
          Text="Insert a html code." OKButton="Link">

            <script Type="text/javascript" Language="javascript" Src="/sitecore/shell/Controls/Rich Text Editor/TranslateBtn/TranslateBtnCommands.js">.</script>

            <CodeBeside Type="SMAE.Foundation.Translator.sitecore.shell.Controls.Rich_Text_Editor.TranslateBtn.TranslateBtn,SMAE.Foundation.Translator"/>

            <Border Padding="4px 0px 4px 0px">
                <GridPanel Width="100%" Columns="2">
                    <Border Padding="0px 4px 0px 0px">
                        <Literal Text="Enter you text:"/>
                    </Border>

                    <Edit ID="TextEdit" Width="100%" GridPanel.Width="100%"/>
                </GridPanel>
            </Border>
        </FormDialog>
    </RichText.TestBtn>
